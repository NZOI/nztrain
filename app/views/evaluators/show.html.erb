<% content_for :title, @evaluator.name %>
<% toolbox_push :edit, edit_evaluator_path(@evaluator) if policy(@evaluator).edit? %>
<% toolbox_push :back, evaluators_path %>

<p>
  <b>Description:</b>
  <%= @evaluator.description %>
</p>
<% if policy(@evaluator).inspect? %>
  <p>
    <b>Language:</b>
    <%= @evaluator.language&.name %><br>
    <b>Source:</b>
    <%= predisplay @evaluator.source, language: @evaluator.language&.lexer %>
  </p>
<% end %>

<p>
  <b>User:</b>
  <%= @evaluator.owner_id %>
</p>
