<!DOCTYPE html>
<html>
  <head>
    <title>Nztrain</title>
    <%= stylesheet_link_tag :all %>
    <%= stylesheet_link_tag "jquery-ui/jquery.ui.all" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div class="header-container">
      <header>
        <nav class="meter-wrap">
          <nav class="meter-value" style="width: 60%">
            <ul>
              <% if user_signed_in? %>
                <li>
                  signed in as <%= current_user.email %>
                </li>
                <li>
                  <a href="<%= problems_path %>">problems</a>
                </li>
                <li>
                  <a href="<%= contests_path %>">contests</a>
                </li>
                <li>
                  <a href="<%= groups_path %>">groups</a>
                </li>
                <li>
                  <a href="<%= users_path %>">users</a>
                </li>
                <li>
                  <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
                </li>
              <% else %>
                <li>
                  <a href="<%= new_user_session_path %>">sign in</a>
                </li>
              <% end %>
            </ul>
          </nav>
        </nav>
      </header>
    </div>
    <div class="centered_div">
      <section class="round" id="main-section">
        <% if notice %><p id="notice"><%= notice %></p><% end %>
        <% if alert %><p id="alert"><%= alert %></p><% end %>
        <%= yield %>
      </section>
    </div>
  </body>
</html>
