<% content_for :title, "Users" %>

<%
# cache policy for efficiency
policy_users_inspect = policy(User).inspect?
policy_users_edit = policy(User).edit?
policy_users_destroy = policy(User).destroy?
policy_users_su = policy(User).su?
%>

<% if policy_users_su %>
  <%= render :partial => 'su', :formats => [:js] %>
<% end %>

<table class="main_table hoverable selectable">
  <thead>
    <tr>
      <th></th>
      <th>Username</th>
      <% if policy_users_inspect %>
        <th>Name</th>
        <th>Email</th>
      <% end %>
      <th>Roles</th>
      <th>Solved Problems</th>
      <th>Brownie Points</th>
      <th></th>
      <% if policy_users_edit %>
        <th></th>
      <% end %>
      <% if policy_users_destroy %>
        <th></th>
      <% end %>
      <% if policy_users_su %>
        <th></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td style="padding-left: 0; padding-right: 0"><%= flag_list(24){ flag(user.country_code.downcase, user.country_name, title: true) } if user.country_code %></td>
        <td><%= user.username %></td>
        <% if policy_users_inspect %>
          <td><%= user.name %></td>
          <td>
              <%= user.email %> <span style="color:red;"><%= "(unconfirmed)" if !user.confirmed? %></span>
          </td>
        <% end %>
        <td><%= user.roles.map {|r| r.name}.join(', ') %></td>
        <td><%= user.num_solved %></td>
        <td><%= user.brownie_points %></td>
        <td><%= link_to 'Show', user %></td>
        <% if policy_users_edit %>
          <td><%= link_to 'Edit', edit_user_path(user) if policy(user).edit? %></td>
        <% end %>
        <% if policy_users_destroy %>
          <td><%= link_to 'Destroy', user, :data => { :confirm => 'Are you sure?' }, :method => :delete if policy(user).destroy? %></td>
        <% end %>
        <% if policy(user).su? %>
          <td><%= link_to "su", su_user_path(user), :rel => "facebox" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

