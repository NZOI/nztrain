<%= form_for(@problem, :html => {:multipart => true}) do |f| %>
  <% if @problem.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@problem.errors.count, "error") %> prohibited this problem from being saved:</h2>

      <ul>
      <% @problem.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :statement %><br />
    <%= f.text_area :statement, :class => 'markdown' %>
  </div>
  <div class="field">
    <%= f.label :input %><br />
    <%= f.radio_button(:input_type, "stdin") %><%= f.label(:input_type_stdin, "stdin") %><br />
    <%= f.radio_button(:input_type, "file", "data-radio-enable" => :problem_input) %><%= f.label(:input_type_file, "file") %> <%= f.text_field :input, class: :radio_input %>
  </div>
  <div class="field">
    <%= f.label :output %><br />
    <%= f.radio_button(:output_type, "stdout") %><%= f.label(:output_type_stdout, "stdout") %><br />
    <%= f.radio_button(:output_type, "file", "data-radio-enable" => :problem_output) %><%= f.label(:output_type_file, "file") %> <%= f.text_field :output, class: :radio_input %>
  </div>
  <div class="field">
    <%= f.label :memory_limit %><br />
    <%= f.text_field :memory_limit %>
  </div>
  <div class="field">
    <%= f.label :time_limit %><br />
    <%= f.text_field :time_limit %>
  </div>
  <div class="field">
    <%= f.label :evaluator_id %><br />
    <%= f.text_field :evaluator_id %>
  </div>
  <div class="field">
    <%= f.label :owner_id %><br />
    <% if policy(@problem).transfer? %>
      <%= f.text_field :owner_id %>
    <% else %>
      <%= handle(@problem.owner) %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :scoring_method %><br />
    <%= f.select :scoring_method, [["Max Submission", Problem::SCORING_METHOD[:max_submission]], ["Subtask Scoring", Problem::SCORING_METHOD[:subtask_scoring]]] %><br />
    <ul>
      <li>Max Submission: A user's score in this problem is determined by the highest scoring submissions they have on this problem.</li>
      <li>Subtask Scoring: A user's score is the sum of the best scores they have achieved in every subtask, potentially across different submissions.</li>
    </ul>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

